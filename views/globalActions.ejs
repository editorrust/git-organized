<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Global Actions | Git Organized</title>
</head>
<body>
   <style>
      .action-box {
         border-radius: 4px;
         margin-bottom: 10px;
         padding: 20px;
         font-family: "Nunito", sans-serif;
         color: #222;
      }

      .action-box a {
         color: #222;
         text-decoration: none;
      }

   </style>
   <% if (user !== "(not signed in)") { %>
      <%- include("partials/navbar"); %>

      <div class="page dark:bg-gray-900 dark:text-gray-100 border-l-gray-50 dark:border-l-gray-700 border-transparent" style="border-width: .3vh">
         <%- include("partials/locbar", { text: "Home>Global Actions" }); %>
         <div class="content">
            <div>
               <% actions.forEach(function(action) { %>
                  <div class="action-box text-gray-900 dark:text-gray-50 odd:bg-white even:bg-gray-50 dark:odd:bg-gray-900 dark:even:bg-gray-800">
                     <h3><%= action.text %></h3>
                     <i>User: <%= action.userCall %></i>
                     <p>Date: <%= action.time %></p>
                     <p>Location: <%= action.location %></p>
                     <br>
                     <b>Dev Data</b>
                     <p>MONGO ID: <%= action._id %></p>
                     <p>TYPE DATA: <%= action.type %></p>
                     <p>ID: <%= action.id %></p>
                  </div>
               <% }); %>
            </div>
         </div>
      </div>
   <%} else { %>
      <%- include("partials/signedOut"); %>
      <%- include("partials/signIn"); %>
   <% } %>
</body>
</html>