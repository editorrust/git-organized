<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Your Projects | Git Organized</title>
</head>
<body>
   <% if (user !== "(not signed in)") { %>
      <%- include("partials/navbar"); %>

      <div class="page">
         <%- include("partials/locbar", { text: "Home>Your Projects" }); %>
          <div class="content">
             <div class="p-1 relative">
               <p class="text-4xl m-4 mb-6 uppercase text-amber-400 font-bold" style="text-shadow: 2px 2px #ff9800;">Projects you are in</p>
               <div class="p-2 bg-gray-50 rounded-xl">
                  <% projects.forEach(function(project) { %>
                     <% if (project.contributors.includes(user.userCall)) { %>
                        <div class="py-4 px-6 m-2 rounded-md bg-white border-l-8 border-l-sky-400 ">
                          <a class="text-4xl" href="/project/<%= project.name %>"><%= project.name %></a><br>
                          <p class="text-gray-600 font-nunito font-medium text-xl"><%= project.description %></p>
                       </div>
                     <% } %>
                  <% }); %>
               </div>
               <div class="flex justify-center">
                  <button class="absolute top-3 right-3 bg-gradient-to-br from-amber-400 to-orange-400 px-5 py-3 text-white text-lg font-nunito font-semibold rounded-xl"><a href="/new-project">Make a new project</a></button>
               </div>
             </div>
          </div>
      </div>
      
   <% } else { %>
      <%- include("partials/signedOut"); %>
      <%- include("partials/signIn"); %>
   <% } %>
</body>
</html>