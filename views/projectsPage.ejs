<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Your Projects | Git Organized</title>
</head>
<body>
   <% if (user !== "(not signed in)") { %>
      <%- include("partials/navbar"); %>

      <div class="page">
         <div class="locbar">
            <p>Home>Your Projects</p>
          </div>
          <div class="content">
             <button><a href="/new-project">Make a new project</a></button>
             <%= projects %>
             <br>
             <div class="p-4 m-2 rounded-md bg-gray-50">
               <p class="text-lg m-4">Projects you are in</p>
               <% projects.forEach(function(project) { %>
                  <% if (project.contributors.includes(user.userCall)) { %>
                     <div class="py-4 px-6 m-2 rounded-md bg-white border-l-8 border-sky-400 ">
                       <a class="text-4xl" href="/project/<%= project.name %>"><%= project.name %></a><br>
                       <p class="text-gray-600 font-nunito font-medium text-xl"><%= project.description %></p>
                    </div>
                  <% } %>
               <% }); %>
             </div>
             
          </div>
      </div>
      
   <% } else { %>
      <%- include("partials/signedOut"); %>
      <%- include("partials/signIn"); %>
   <% } %>
</body>
</html>