      <a href="/your-projects" class="float-left" title="Your Projects"><span class="material-symbols-rounded navbar-icon-wide">folder_open</span></a>
      <a href="/account" class="float-right" title="Account"><span class="material-symbols-rounded navbar-icon-wide">account_circle</span></a>
      <a href="/sign-out" class="float-right" title="Log out"><span class="material-symbols-rounded navbar-icon-wide">logout</span></a>
   </div> -->
</div>
<style>
.nvbr { transition: .2s; }
</style>
<script>
let nvbr = document.querySelector(".nvbr");
function doo() {
   document.querySelector(".layout").style.gridTemplateColumns = "5rem auto";
   if (nvbr.style.width == "23rem") {
      nvbr.style.width = "4.5rem";
      document.querySelector(".app").style.display = "none";
      toggleMenuStyle("hide");
   }
   else {
      nvbr.style.width = "23rem";
      document.querySelector(".app").style.display = "block";
      toggleMenuStyle("show");
   }
}
function cho() {
   if (nvbr.style.width == "23rem") {
      nvbr.style.width = "4.5rem";
      document.querySelector(".app").style.display = "none";
      document.querySelector(".layout").style.gridTemplateColumns = "5rem auto";
      toggleMenuStyle("hide");
   } else {
      nvbr.style.width = "23rem";
      document.querySelector(".app").style.display = "block";
      document.querySelector(".layout").style.gridTemplateColumns = "23.5rem auto";
      toggleMenuStyle("show");
   }
}
function toggleMenuStyle(option) {
   if (option == "show") {
      document.querySelector(".bigMenu").style.display = "block";
      document.querySelector(".smallMenu").style.display = "none";
   }
   else {
      document.querySelector(".bigMenu").style.display = "none";
      document.querySelector(".smallMenu").style.display = "block";
   }
}
</script>